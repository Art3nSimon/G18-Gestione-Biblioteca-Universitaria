<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.uni.biblioteca.controller.PrestitoController"
            styleClass="content-pane">
    
    <!-- TOP: Header e Statistiche -->
    <top>
        <VBox spacing="10.0" styleClass="prestiti-header">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            
            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <Label text="PRESTITI ATTIVI" styleClass="section-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Aggiorna" onAction="#aggiornaTabella" 
                       styleClass="button-annulla"/>
            </HBox>
            
            <!-- Statistiche -->
            <HBox spacing="30.0" alignment="CENTER_LEFT" styleClass="stats-box">
                <Label fx:id="labelTotale" text="Totale Prestiti Attivi: 0"/>
                <Label fx:id="labelRitardi" text="Prestiti in Ritardo: 0"/>
                <Label fx:id="labelScadenza" text="In Scadenza (entro 2gg): 0"/>
            </HBox>
            
            <!-- Legenda con pallini colorati -->
            <HBox spacing="20.0" alignment="CENTER_LEFT" style="-fx-padding: 5 0 0 0;">
                <Label text="Legenda:" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                
                <HBox spacing="5.0" alignment="CENTER_LEFT">
                    <Circle radius="6" fill="#c62828"/>
                    <Label text="Ritardo" style="-fx-font-size: 11px;"/>
                </HBox>
                
                <HBox spacing="5.0" alignment="CENTER_LEFT">
                    <Circle radius="6" fill="#f9a825"/>
                    <Label text="Scadenza imminente" style="-fx-font-size: 11px;"/>
                </HBox>
                
                <HBox spacing="5.0" alignment="CENTER_LEFT">
                    <Circle radius="6" fill="#2e7d32"/>
                    <Label text="Attivo" style="-fx-font-size: 11px;"/>
                </HBox>
            </HBox>
        </VBox>
    </top>
    
    <!-- CENTER: Tabella prestiti -->
    <center>
        <TableView fx:id="tabellaPrestiti" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colonnaUtente" text="Utente" prefWidth="200.0"/>
                <TableColumn fx:id="colonnaLibro" text="Libro" prefWidth="250.0"/>
                <TableColumn fx:id="colonnaDataPrestito" text="Data Prestito" prefWidth="120.0"/>
                <TableColumn fx:id="colonnaDataScadenza" text="Scadenza" prefWidth="120.0"/>
                <TableColumn fx:id="colonnaStato" text="Stato" prefWidth="150.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <placeholder>
                <Label text="Nessun prestito attivo" style="-fx-text-fill: #999;"/>
            </placeholder>
        </TableView>
    </center>
    
    <!-- BOTTOM: Bottoni azione -->
    <bottom>
        <HBox spacing="10.0" alignment="CENTER" styleClass="button-bar">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            
            <Button text="Nuovo Prestito" onAction="#registraPrestito" 
                    styleClass="button" prefWidth="180.0"/>
            <Button text="Registra Restituzione" onAction="#registraRestituzione" 
                    styleClass="button-conferma" prefWidth="200.0"/>
        </HBox>
    </bottom>
    
</BorderPane>
