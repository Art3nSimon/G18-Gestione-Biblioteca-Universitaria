                </VBox>
                
                <!-- CARD PRESTITI -->
                <VBox fx:id="cardPrestiti" styleClass="dashboard-card, card-prestiti" 
                      spacing="15.0" alignment="CENTER"
                      onMouseClicked="#apriGestionePrestiti">
